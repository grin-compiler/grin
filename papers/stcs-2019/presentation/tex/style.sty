\newcommand{\captionabove}[2][]
{
	\vskip-\abovecaptionskip
	\vskip+\belowcaptionskip
	\ifx\@nnil#1\@nnil
	\caption{#2}%
	\else
	\caption[#1]{#2}%
	\fi
	\vskip+\abovecaptionskip
	\vskip-\belowcaptionskip
}

